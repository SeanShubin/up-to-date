<project>
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>com.seanshubin</groupId>
        <artifactId>up_to_date</artifactId>
        <version>1.0-SNAPSHOT</version>
    </parent>
    <artifactId>up_to_date-console</artifactId>
    <name>up_to_date-console</name>
    <dependencies>
        <dependency>
            <groupId>com.seanshubin</groupId>
            <artifactId>up_to_date-logic</artifactId>
            <version>${parent.version}</version>
        </dependency>
        <dependency>
            <groupId>com.seanshubin</groupId>
            <artifactId>up_to_date-integration</artifactId>
            <version>${parent.version}</version>
        </dependency>
    </dependencies>
    <build>
        <sourceDirectory>src/main/scala</sourceDirectory>
        <testSourceDirectory>src/test/scala</testSourceDirectory>
        <plugins>
            <plugin>
                <groupId>org.scalatest</groupId>
                <artifactId>scalatest-maven-plugin</artifactId>
            </plugin>
            <plugin>
                <groupId>org.dstovall</groupId>
                <artifactId>onejar-maven-plugin</artifactId>
                <version>1.4.4</version>
                <executions>
                    <execution>
                        <configuration>
                            <mainClass>com.seanshubin.up_to_date.console.ConsoleApplication</mainClass>
                            <filename>up-to-date.jar</filename>
                        </configuration>
                        <goals>
                            <goal>one-jar</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
    <profiles>
        <profile>
            <id>dependency</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>exec-maven-plugin</artifactId>
                        <version>1.2.1</version>
                        <executions>
                            <execution>
                                <id>dependency analysis</id>
                                <phase>verify</phase>
                                <goals>
                                    <goal>java</goal>
                                </goals>
                                <configuration>
                                    <mainClass>com.seanshubin.dependency.console.ConsoleApplication</mainClass>
                                    <arguments>
                                        <argument>dependency-metrics.json</argument>
                                    </arguments>
                                </configuration>
                            </execution>
                            <execution>
                                <id>class graph</id>
                                <phase>verify</phase>
                                <goals>
                                    <goal>exec</goal>
                                </goals>
                                <configuration>
                                    <executable>dot</executable>
                                    <arguments>
                                        <argument>-Tsvg</argument>
                                        <argument>-otarget/dependency-report/class-graph.svg</argument>
                                        <argument>target/dependency-report/class-graph.txt</argument>
                                    </arguments>
                                </configuration>
                            </execution>
                            <execution>
                                <id>package graph</id>
                                <phase>verify</phase>
                                <goals>
                                    <goal>exec</goal>
                                </goals>
                                <configuration>
                                    <executable>dot</executable>
                                    <arguments>
                                        <argument>-Tsvg</argument>
                                        <argument>-otarget/dependency-report/package-graph.svg</argument>
                                        <argument>target/dependency-report/package-graph.txt</argument>
                                    </arguments>
                                </configuration>
                            </execution>
                        </executions>
                        <configuration>
                            <includePluginDependencies>true</includePluginDependencies>
                            <executableDependency>
                                <groupId>com.seanshubin</groupId>
                                <artifactId>dependency-console</artifactId>
                            </executableDependency>
                        </configuration>
                        <dependencies>
                            <dependency>
                                <groupId>com.seanshubin</groupId>
                                <artifactId>dependency-console</artifactId>
                                <version>1.0-SNAPSHOT</version>
                            </dependency>
                        </dependencies>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>
